extends layout

block content
  .row
    .col-md-4.col-lg-4
    .col-md-4.col-lg-4
      h3 Sign up with #{title}
      if error
        .alert.alert-danger(role='alert')= error
      form(action="", method="POST")
        .form-group
          label(for='inputEmail') Email address
          |  
          input#inputEmail.form-control(type='email', placeholder='Email' name='email')
        .form-group
          label(for='inputUsername') Username
          |  
          input#inputUsername.form-control(type='text', placeholder='Username' name='username')
        .form-group
          label(for='inputPassword') Password
          |  
          input#inputPassword.form-control(type='password', placeholder='Password' name='password')
        .form-group
          != recaptcha.formElement()
        button.btn.btn-default(type='submit') Submit
block scripts
  script(src='https://www.google.com/recaptcha/api.js')

