  body(style='margin-top: 50px')
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          |  
          a.navbar-brand(href='/')= title
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/') 
                i.fa.fa-home 
                |  Home
            li
              a(href='/about') 
                i.fa.fa-info-circle
                |  About
            li
              a(href='/games')
                i.fa.fa-gamepad
                |  Games
            li
              a(href='https://dcrstakes.com', target='_blank') 
                i.fa.fa-external-link
                |  DCR Stakepool
          ul.nav.navbar-nav.navbar-right
            if session.loggedIn
              li
                a(href="/logout")
                  i.fa.fa-sign-out
                  |  Logout
            else
              li
                a(href="/login")
                  i.fa.fa-sign-in
                  |  Login
    .container
      block content
